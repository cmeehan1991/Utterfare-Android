<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/saved_item_name"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/saved_item_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/saved_item_name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxHeight="150dp"
                android:id="@+id/saved_item_short_description"
                android:layout_toRightOf="@+id/saved_item_image"
                android:layout_below="@+id/saved_item_name" />

            <ImageView
                android:id="@+id/saved_item_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:minHeight="200dp"
                android:src="@drawable/ic_logo_no_background"
                android:layout_below="@+id/saved_item_restaurant_name"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>